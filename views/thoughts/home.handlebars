<div class="home-header">
    <h1>Todos os pensamentos</h1>
    <form action="" method="GET">
        <input type="text" name="search" placeholder="EstÃ¡ procurando alguma coisa?">
        <input type="submit" class="btn" value="Buscar" />
    </form>
    <div class="order-container">
        <span>
            Ordenar por:
        </span>
        <form method="GET" action="/">
            <input type="hidden" name="search" value="{{this.search}}" />
            <input type="hidden" name="order" value="new" />
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form method="GET" action="/">
            <input type="hidden" name="search" value="{{this.search}}" />
            <input type="hidden" name="order" value="old" />
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">Limpar</a>
    </div>
</div>

<div class="thoughts-container">
    {{#each thoughts}}
    <figure>
        <blockquote>
            "{{this.title}}"
        </blockquote>
        <figcaption>
            por
            <span>
                {{this.User.name}}
            </span>
        </figcaption>
    </figure>
    {{/each}}
</div>